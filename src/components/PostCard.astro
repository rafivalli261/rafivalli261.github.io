---
import TagBadge from './TagBadge.astro';
import ReadingTime from './ReadingTime.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  slug: string;
  readingTime: number;
}

const { title, date, description, tags, slug, readingTime } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:shadow-md dark:hover:shadow-gray-800 transition-shadow">
  <a href={`/blog/${slug}`}>
    <h2 class="text-xl font-semibold mb-2 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
      {title}
    </h2>
  </a>
  <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400 mb-3">
    <time datetime={date.toISOString()}>{formattedDate}</time>
    <span aria-hidden="true">Â·</span>
    <ReadingTime minutes={readingTime} />
  </div>
  <p class="text-gray-600 dark:text-gray-300 mb-4 text-sm leading-relaxed">
    {description}
  </p>
  <div class="flex flex-wrap gap-2">
    {tags.map((tag) => <TagBadge tag={tag} />)}
  </div>
</article>
