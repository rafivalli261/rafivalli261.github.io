---
import BaseLayout from './BaseLayout.astro';
import TagBadge from '../components/TagBadge.astro';
import ReadingTime from '../components/ReadingTime.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
  tags: string[];
  readingTime: number;
}

const { title, date, description, tags, readingTime } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | Rafi Valli`} description={description}>
  <article>
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-3 leading-tight">{title}</h1>
      <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400 mb-4">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span aria-hidden="true">Â·</span>
        <ReadingTime minutes={readingTime} />
      </div>
      {
        tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <TagBadge tag={tag} />
            ))}
          </div>
        )
      }
    </header>
    <div class="prose dark:prose-invert prose-lg max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
