---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';
import { calculateReadingTime } from '../../utils/readingTime';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<BaseLayout title="All Posts | Rafi Valli" description="All blog posts by Rafi Valli">
  <h1 class="text-3xl font-bold mb-8">All Posts</h1>
  {
    allPosts.length > 0 ? (
      <div class="space-y-6">
        {allPosts.map((post) => (
          <PostCard
            title={post.data.title}
            date={post.data.date}
            description={post.data.description}
            tags={post.data.tags}
            slug={post.id}
            readingTime={calculateReadingTime(post.body ?? '')}
          />
        ))}
      </div>
    ) : (
      <p class="text-gray-500 dark:text-gray-400">No posts yet. Check back soon.</p>
    )
  }
</BaseLayout>
