---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';
import { calculateReadingTime } from '../utils/readingTime';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<BaseLayout title="Rafi Valli">
  <section class="mb-12">
    <h1 class="text-4xl font-bold mb-4">Hi, I'm Rafi</h1>
    <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
      I write about programming, tools, and things I'm learning.
    </p>
  </section>

  <section>
    <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
    {
      recentPosts.length > 0 ? (
        <div class="space-y-6">
          {recentPosts.map((post) => (
            <PostCard
              title={post.data.title}
              date={post.data.date}
              description={post.data.description}
              tags={post.data.tags}
              slug={post.id}
              readingTime={calculateReadingTime(post.body ?? '')}
            />
          ))}
        </div>
      ) : (
        <p class="text-gray-500 dark:text-gray-400">No posts yet. Check back soon.</p>
      )
    }
    {
      allPosts.length > 5 && (
        <a
          href="/blog"
          class="mt-8 inline-block text-blue-600 dark:text-blue-400 hover:underline font-medium"
        >
          View all posts â†’
        </a>
      )
    }
  </section>
</BaseLayout>
